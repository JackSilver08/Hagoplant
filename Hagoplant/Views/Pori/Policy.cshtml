    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

            // 1) Reveal on scroll (mượt + chuẩn hiệu năng) dùng IntersectionObserver
            const sections = document.querySelectorAll('.policy-section');

            // Set trạng thái ban đầu
            sections.forEach((el) => {
                el.style.willChange = 'transform, opacity';
                el.style.opacity = '0';
                el.style.transform = 'translateY(14px)'; // nhẹ
                el.style.transition = prefersReducedMotion
                    ? 'none'
                    : 'opacity 500ms ease, transform 600ms ease';
            });

            if (!prefersReducedMotion && 'IntersectionObserver' in window) {
                const io = new IntersectionObserver((entries, observer) => {
                    entries.forEach((entry) => {
                        if (!entry.isIntersecting) return;

                        const el = entry.target;
                        // tránh re-animate
                        if (el.dataset.revealed === '1') {
                            observer.unobserve(el);
                            return;
                        }

                        el.dataset.revealed = '1';
                        el.style.opacity = '1';
                        el.style.transform = 'translateY(0)';
                        observer.unobserve(el);
                    });
                }, {
                    root: null,
                    threshold: 0.12,
                    rootMargin: '0px 0px -10% 0px'
                });

                sections.forEach(el => io.observe(el));
            } else {
                // Fallback: nếu giảm chuyển động hoặc browser cũ
                sections.forEach((el) => {
                    el.style.opacity = '1';
                    el.style.transform = 'none';
                    el.style.transition = 'none';
                });
            }

            // 2) Micro-interaction: hover/tap nhẹ cho section (không “lố”)
            if (!prefersReducedMotion) {
                sections.forEach((el) => {
                    el.addEventListener('mouseenter', () => {
                        el.style.transition = 'transform 200ms ease, box-shadow 200ms ease, border-left-color 200ms ease';
                        el.style.transform = 'translateY(-2px)';
                        el.style.boxShadow = '0 10px 25px rgba(0,0,0,0.08)';
                        el.style.borderLeftColor = '#478152';
                    });

                    el.addEventListener('mouseleave', () => {
                        el.style.transform = 'translateY(0)';
                        el.style.boxShadow = '0 5px 15px rgba(0,0,0,0.05)';
                        el.style.borderLeftColor = '#579a62';
                    });

                    // Mobile tap feedback
                    el.addEventListener('touchstart', () => {
                        el.style.transition = 'transform 120ms ease';
                        el.style.transform = 'scale(0.995)';
                    }, { passive: true });

                    el.addEventListener('touchend', () => {
                        el.style.transform = 'scale(1)';
                    }, { passive: true });
                });
            }

            // 3) Smooth scroll cho các link dạng #... (nếu trang này có anchor)
            // Lưu ý: trang Policy/Privacy thường không có section id, nên đoạn này chỉ hỗ trợ khi có.
            if (!prefersReducedMotion) {
                document.querySelectorAll('a[href^="#"]').forEach((a) => {
                    a.addEventListener('click', (e) => {
                        const href = a.getAttribute('href');
                        if (!href || href === '#') return;

                        const target = document.querySelector(href);
                        if (!target) return;

                        e.preventDefault();
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    });
                });
            }

            // 4) Cart demo: tránh lỗi null khi không có .add-to-cart
            let cartCount = 3;
            const badge = document.querySelector('.cart-badge');

            document.querySelectorAll('.add-to-cart').forEach(btn => {
                btn.addEventListener('click', () => {
                    cartCount++;
                    if (badge) badge.textContent = cartCount;

                    // UX: thay alert bằng feedback nhẹ (toast mini)
                    showMiniToast('Đã thêm sản phẩm vào giỏ hàng');
                });
            });

            function showMiniToast(message) {
                // Nếu bạn đang có hệ thống Toast Bootstrap riêng thì bỏ khối này và gọi toast của bạn.
                const toast = document.createElement('div');
                toast.textContent = message;
                toast.style.position = 'fixed';
                toast.style.left = '50%';
                toast.style.bottom = '28px';
                toast.style.transform = 'translateX(-50%)';
                toast.style.padding = '10px 14px';
                toast.style.borderRadius = '999px';
                toast.style.background = 'rgba(0,0,0,0.75)';
                toast.style.color = '#fff';
                toast.style.fontSize = '14px';
                toast.style.zIndex = '9999';
                toast.style.opacity = '0';
                toast.style.transition = prefersReducedMotion ? 'none' : 'opacity 220ms ease, transform 220ms ease';
                toast.style.willChange = 'opacity, transform';

                document.body.appendChild(toast);

                requestAnimationFrame(() => {
                    toast.style.opacity = '1';
                    toast.style.transform = 'translateX(-50%) translateY(-2px)';
                });

                setTimeout(() => {
                    toast.style.opacity = '0';
                    toast.style.transform = 'translateX(-50%) translateY(2px)';
                    setTimeout(() => toast.remove(), 260);
                }, 1300);
            }
        });
    </script>

