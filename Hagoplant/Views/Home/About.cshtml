@{
    ViewData["Title"] = "Giới thiệu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hago Tree - Cây Cảnh Cao Cấp</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts: Francois One -->
    <link href="https://fonts.googleapis.com/css2?family=Francois+One&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Francois One', sans-serif;
            background-color: #f8f5f0;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        /* Thêm các style này vào phần CSS hiện có */

        /* Header styles */
        header {
            z-index: 1030;
        }

        .navbar-nav .nav-link {
            padding: 0.5rem 1rem;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(87, 154, 98, 0.1);
                color: #579a62 !important;
            }

            .navbar-nav .nav-link.active {
                color: #579a62 !important;
                font-weight: bold;
            }

        /* Search bar styling */
        .input-group .form-control {
            border: 2px solid #e0e0e0;
            border-right: none;
            border-radius: 50px 0 0 50px;
            padding-left: 20px;
        }

        .input-group .btn {
            border-radius: 0 50px 50px 0;
            border: 2px solid #579a62;
        }

        .input-group .form-control:focus {
            border-color: #579a62;
            box-shadow: none;
        }

        /* Cart styling */
        #cart-btn {
            position: relative;
            padding: 0.5rem 0.75rem;
            font-size: 1.2rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 991px) {
            .navbar-collapse {
                padding: 1rem 0;
            }

            .input-group {
                margin-bottom: 1rem;
            }

            .navbar-nav .nav-item {
                margin-bottom: 0.5rem;
            }
        }

        @@media (min-width: 992px) {
            .navbar-nav .nav-item:not(:last-child) {
                margin-right: 0.5rem;
            }
        }

        .text-primary-custom {
            color: #579a62 !important;
        }

        .bg-primary-custom {
            background-color: #579a62 !important;
        }

        .btn-primary-custom {
            background-color: #579a62;
            border-color: #579a62;
            color: white;
        }

            .btn-primary-custom:hover {
                background-color: #478152;
                border-color: #478152;
            }

        .btn-secondary-custom {
            background-color: transparent;
            border-color: #579a62;
            color: #579a62;
        }

            .btn-secondary-custom:hover {
                background-color: rgba(87, 154, 98, 0.1);
            }

        .ornament {
            position: relative;
        }

            .ornament::before,
            .ornament::after {
                content: '❦';
                position: absolute;
                color: #d4af37;
                font-size: 28px;
                top: 50%;
                transform: translateY(-50%);
            }

            .ornament::before {
                left: -50px;
            }

            .ornament::after {
                right: -50px;
            }

        .product-card {
            transition: all 0.3s ease;
            border: 2px solid #d4af37;
            background-color: #ffffff;
            overflow: hidden;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(87, 154, 98, 0.25);
            }

            .product-card img {
                transition: transform 0.5s ease;
            }

            .product-card:hover img {
                transform: scale(1.05);
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-out;
        }

        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #d4af37;
            color: white;
            border-radius: 50%;
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center; /* căn giữa theo chiều dọc */
            justify-content: center; /* căn giữa theo chiều ngang */

            font-size: 12px;
            line-height: 1; /* tránh bị lệch chữ */
        }

        /* Hero Section Slider */
        .hero-section {
            position: relative;
            height: 600px;
            overflow: hidden;
            color: white;
        }

        .hero-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0;
            transition: opacity 1.5s ease-in-out;
        }

            .hero-slide.active {
                opacity: 1;
            }

            .hero-slide::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6));
            }

        /* Ảnh 1: Vintage Botanical */
        .hero-slide-1 {
            background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20250929/pngtree-elegant-gold-and-green-botanical-illustration-decorative-design-image_19708320.webp');
        }

        /* Ảnh 2: Cây cảnh trong nhà */
        .hero-slide-2 {
            background-image: url('https://images.unsplash.com/photo-1416879595882-3373a0480b5b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        }

        /* Ảnh 3: Không gian xanh */
        .hero-slide-3 {
            background-image: url('https://images.unsplash.com/photo-1501004318641-b39e6451bec6?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
        }

        .hero-content {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Dots navigation */
        .slider-dots {
            position: absolute;
            bottom: 30px;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 10px;
            z-index: 3;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .dot.active {
                background-color: #d4af37;
                transform: scale(1.2);
            }

        /* Animation cho text */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-title {
            animation: fadeInUp 1s ease-out 0.5s both;
        }

        .hero-subtitle {
            animation: fadeInUp 1s ease-out 1s both;
        }

        .hero-btn {
            animation: fadeInUp 1s ease-out 1.5s both;
        }

        /* Footer */
        /* Footer styles */
        footer {
            background: linear-gradient(to right, #1a1a1a, #2d2d2d) !important;
            flex-shrink: 0;
            margin-top: auto !important;
            width: 100%;
        }

            footer .social-icon {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 45px;
                height: 45px;
                border-radius: 50%;
                color: white;
                font-size: 1.2rem;
                transition: all 0.3s ease;
                text-decoration: none;
            }

                footer .social-icon.facebook {
                    background-color: #3b5998;
                }

                footer .social-icon.zalo {
                    background-color: #0068ff;
                }

                footer .social-icon.shopee {
                    background-color: #ee4d2d;
                }

                footer .social-icon:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
                }

            footer a.text-light:hover {
                color: #579a62 !important;
                padding-left: 5px;
                transition: all 0.3s ease;
            }

        /* Responsive footer */
        @@media (max-width: 768px) {
            footer .d-flex.align-items-center {
                flex-direction: column;
                text-align: center;
            }

                footer .d-flex.align-items-center .me-3 {
                    margin-right: 0 !important;
                    margin-bottom: 1rem;
                }
        }

        .imglogo {
            width: 50px;
            height: 50px;
        }


        /* THÊM STYLE CHO PHẦN BODY NỘI DUNG (chỉ phần main) */

        /* Container chính */
        main.container, main .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Container trong main */
        main .container {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
            margin-bottom: 0 !important;
        }

        /* Giảm margin của các sections */
        main section.mb-5 {
            margin-bottom: 2rem !important;
        }

        /* Section cuối cùng không có margin dưới */
        main section:last-child {
            margin-bottom: 0 !important;
            padding-bottom: 1.5rem !important;
        }

        /* Tiêu đề chính */
        main h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            color: #2c3e50;
            text-align: center;
            position: relative;
            padding-bottom: 20px;
        }

            main h1::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, #579a62, #d4af37);
                border-radius: 2px;
            }

        main h2 {
            font-size: 2.2rem;
            margin: 2.5rem 0 1.5rem;
            color: #34495e;
            position: relative;
            padding-left: 20px;
        }

            main h2::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 6px;
                height: 70%;
                background-color: #579a62;
                border-radius: 3px;
            }

        main h3 {
            font-size: 1.8rem;
            color: #579a62;
            margin: 2rem 0 1rem;
            border-bottom: 2px solid #e8f5e9;
            padding-bottom: 8px;
        }

        main h4 {
            font-size: 1.4rem;
            color: #d4af37;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        /* Đoạn văn */
        main p {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 1.2rem;
            color: #4a5568;
            text-align: justify;
        }

        main .lead {
            font-size: 1.3rem;
            color: #555;
            font-weight: 300;
            line-height: 1.7;
            max-width: 800px;
            margin: 0 auto 2rem;
        }

        /* Danh sách */
        main ul {
            list-style-type: none;
            padding-left: 0;
            margin: 1.5rem 0;
        }

            main ul li {
                padding: 8px 0 8px 35px;
                position: relative;
                margin-bottom: 8px;
                color: #4a5568;
                font-size: 1.1rem;
            }

                main ul li::before {
                    content: '✓';
                    position: absolute;
                    left: 0;
                    top: 8px;
                    width: 25px;
                    height: 25px;
                    background-color: #579a62;
                    color: white;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 14px;
                    font-weight: bold;
                }

        /* Card boxes */
        main .bg-white {
            background-color: #ffffff !important;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(87, 154, 98, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e0e0e0;
            overflow: hidden;
        }

            main .bg-white:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(87, 154, 98, 0.15);
                border-color: #579a62;
            }

        /* Các section */
        main section {
            margin-bottom: 4rem;
            padding: 2rem;
            background: linear-gradient(to bottom, #ffffff, #f9f9f9);
            border-radius: 15px;
            border-left: 5px solid #579a62;
        }

        /* Timeline items */
        main .col-md-6 {
            margin-bottom: 1.5rem;
        }

        /* Quotes và text đặc biệt */
        main .fw-bold {
            font-size: 1.2rem;
            color: #579a62;
            background-color: rgba(87, 154, 98, 0.1);
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #d4af37;
            margin: 2rem 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            main h1 {
                font-size: 2.2rem;
            }

            main h2 {
                font-size: 1.8rem;
            }

            main h3 {
                font-size: 1.5rem;
            }

            main p {
                font-size: 1rem;
            }

            main section {
                padding: 1.5rem;
            }
        }

        /* Animation cho các phần tử */
        .fade-in-element {
            animation: fadeInUp 0.8s ease-out forwards;
            opacity: 0;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Styling cho ornament đã có */
        main .ornament::before,
        main .ornament::after {
            content: '❦';
            position: absolute;
            color: #d4af37;
            font-size: 28px;
            top: 50%;
            transform: translateY(-50%);
        }

        main .ornament::before {
            left: -50px;
        }

        main .ornament::after {
            right: -50px;
        }

        /* Custom cho nội dung giới thiệu */
        main .text-primary-custom {
            background: linear-gradient(90deg, #579a62, #2c5f2d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        /* Background nền tổng thể */
        main {
            flex: 1;
            background: linear-gradient(135deg, #f8f5f0 0%, #f0f7f0 100%);
            position: relative;
            overflow: hidden;
            padding: 0 !important;
            margin: 0 !important;
        }

            main::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(circle at 20% 80%, rgba(87, 154, 98, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(212, 175, 55, 0.06) 0%, transparent 50%);
                pointer-events: none;
            }

            /* Tiêu đề chính với hiệu ứng đặc biệt */
            main h1 {
                font-size: 3.5rem;
                font-weight: 800;
                margin-bottom: 2rem;
                text-align: center;
                position: relative;
                padding: 1.5rem 0;
                background: linear-gradient(45deg, #2c5f2d, #579a62, #d4af37);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
                letter-spacing: 1px;
            }

                main h1::before {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 200px;
                    height: 4px;
                    background: linear-gradient(90deg, transparent, #579a62, #d4af37, transparent);
                    border-radius: 2px;
                }

                main h1::after {
                    content: '✿';
                    position: absolute;
                    bottom: -15px;
                    left: 50%;
                    transform: translateX(-50%);
                    color: #d4af37;
                    font-size: 24px;
                    animation: float 3s ease-in-out infinite;
                }

            /* Tiêu đề phụ */
            main h2 {
                font-size: 2.5rem;
                margin: 3rem 0 2rem;
                text-align: center;
                position: relative;
                padding: 1rem 4rem;
                background: white;
                display: inline-block;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(87, 154, 98, 0.15);
                border: 2px solid #e8f5e9;
                transform-style: preserve-3d;
                perspective: 1000px;
            }

                main h2 .ornament {
                    position: relative;
                    padding: 0 4rem;
                }

                    main h2 .ornament::before,
                    main h2 .ornament::after {
                        content: '❧';
                        position: absolute;
                        color: #d4af37;
                        font-size: 32px;
                        top: 50%;
                        transform: translateY(-50%) rotate(-15deg);
                        animation: spin 10s linear infinite;
                    }

                    main h2 .ornament::before {
                        left: 0;
                        animation-delay: -5s;
                    }

                    main h2 .ornament::after {
                        right: 0;
                        transform: translateY(-50%) rotate(15deg);
                    }

            /* Timeline cards - Thiết kế giống như những lá cây */
            main .col-md-6 .bg-white {
                background: linear-gradient(145deg, #ffffff, #f5f5f5) !important;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(87, 154, 98, 0.15), inset 0 1px 0 rgba(255,255,255,0.8);
                border: none;
                padding: 2.5rem;
                position: relative;
                overflow: hidden;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                min-height: 280px;
                border-top: 5px solid #579a62;
            }

                main .col-md-6 .bg-white::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 5px;
                    background: linear-gradient(90deg, #579a62, #d4af37);
                }

                main .col-md-6 .bg-white::after {
                    content: '2025';
                    position: absolute;
                    top: 20px;
                    right: 20px;
                    font-size: 4rem;
                    font-weight: 900;
                    color: rgba(87, 154, 98, 0.05);
                    z-index: 0;
                }

            main .col-md-6:nth-child(2) .bg-white::after {
                content: '2026';
            }

            main .col-md-6:nth-child(3) .bg-white::after {
                content: '2027';
            }

            main .col-md-6:nth-child(4) .bg-white::after {
                content: '2028';
            }

            main .col-md-6 .bg-white:hover {
                transform: translateY(-15px) rotateX(5deg);
                box-shadow: 0 25px 50px rgba(87, 154, 98, 0.25), 0 0 100px rgba(212, 175, 55, 0.1);
            }

            /* Timeline year indicator */
            main .col-md-6 .text-warning {
                font-size: 1.8rem;
                font-weight: 700;
                color: #d4af37 !important;
                position: relative;
                display: inline-block;
                padding-bottom: 10px;
                margin-bottom: 1.5rem;
            }

                main .col-md-6 .text-warning::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 60px;
                    height: 3px;
                    background: linear-gradient(90deg, #d4af37, #ffd700);
                    border-radius: 2px;
                }

            /* Paragraph styling với hiệu ứng */
            main p {
                font-size: 1.15rem;
                line-height: 1.9;
                color: #4a5568;
                position: relative;
                padding-left: 1.5rem;
                margin-bottom: 1.5rem;
                text-align: justify;
            }

                main p::before {
                    content: '❖';
                    position: absolute;
                    left: 0;
                    top: 0;
                    color: #579a62;
                    font-size: 1rem;
                }

            main .lead {
                font-size: 1.4rem;
                font-weight: 300;
                line-height: 1.8;
                color: #555;
                text-align: center;
                max-width: 900px;
                margin: 2rem auto 4rem;
                padding: 2rem;
                background: rgba(255, 255, 255, 0.9);
                border-radius: 15px;
                border-left: 5px solid #d4af37;
                box-shadow: 0 8px 25px rgba(0,0,0,0.05);
                position: relative;
                overflow: hidden;
            }

                main .lead::before {
                    content: '"';
                    position: absolute;
                    top: 10px;
                    left: 20px;
                    font-size: 8rem;
                    color: rgba(87, 154, 98, 0.1);
                    font-family: serif;
                    line-height: 1;
                }

            /* Sections với hiệu ứng đặc biệt */
            main > section {
                background: rgba(255, 255, 255, 0.95);
                border-radius: 25px;
                padding: 3rem;
                margin-bottom: 2rem !important; /* Giảm margin giữa các sections */
                box-shadow: 0 15px 35px rgba(87, 154, 98, 0.1), inset 0 1px 0 rgba(255,255,255,0.8);
                border: 1px solid rgba(87, 154, 98, 0.1);
                position: relative;
                overflow: hidden;
            }

                main > section::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    height: 8px;
                    background: linear-gradient(90deg, #579a62 0%, #8bc34a 25%, #d4af37 50%, #8bc34a 75%, #579a62 100%);
                }

            /* List với hiệu ứng đẹp */
            main ul {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 1rem;
                margin: 2rem 0;
            }

                main ul li {
                    background: linear-gradient(145deg, #f8fff8, #e8f5e9);
                    padding: 1.2rem 1.2rem 1.2rem 3.5rem;
                    border-radius: 12px;
                    position: relative;
                    margin-bottom: 0.8rem;
                    border: 1px solid rgba(87, 154, 98, 0.2);
                    transition: all 0.3s ease;
                    font-size: 1.1rem;
                    color: #2c3e50;
                }

                    main ul li:hover {
                        transform: translateX(10px);
                        background: linear-gradient(145deg, #e8f5e9, #f8fff8);
                        box-shadow: 0 5px 15px rgba(87, 154, 98, 0.2);
                    }

                    main ul li::before {
                        content: '🌿';
                        position: absolute;
                        left: 1rem;
                        top: 50%;
                        transform: translateY(-50%);
                        font-size: 1.3rem;
                        background: linear-gradient(45deg, #579a62, #8bc34a);
                        -webkit-background-clip: text;
                        -webkit-text-fill-color: transparent;
                        background-clip: text;
                        animation: leafMove 2s ease-in-out infinite;
                    }

            /* Highlight text */
            main strong {
                background: linear-gradient(120deg, rgba(87, 154, 98, 0.1) 0%, rgba(87, 154, 98, 0.2) 100%);
                padding: 0.2rem 0.5rem;
                border-radius: 4px;
