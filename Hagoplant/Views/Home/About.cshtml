    <script>
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Add to cart simple
        let cartCount = 3;
        document.querySelectorAll('.add-to-cart').forEach(btn => {
            btn.addEventListener('click', () => {
                cartCount++;
                document.querySelector('.cart-badge').textContent = cartCount;
                alert('Đã thêm sản phẩm vào giỏ hàng!');
            });
        });

                // Thêm script này vào phần script hiện có
        document.addEventListener('DOMContentLoaded', function() {
            // Slider Hero Section
            const slides = document.querySelectorAll('.hero-slide');
            const dots = document.querySelectorAll('.dot');
            let currentSlide = 0;
            const slideInterval = 5000; // 5 giây chuyển slide

            function showSlide(index) {
                // Ẩn tất cả slides
                slides.forEach(slide => {
                    slide.classList.remove('active');
                });

                // Xóa active tất cả dots
                dots.forEach(dot => {
                    dot.classList.remove('active');
                });

                // Hiển thị slide được chọn
                slides[index].classList.add('active');
                dots[index].classList.add('active');
                currentSlide = index;
            }

            // Tự động chuyển slide
            function nextSlide() {
                let nextIndex = (currentSlide + 1) % slides.length;
                showSlide(nextIndex);
            }

            // Bắt đầu tự động chuyển slide
            let slideTimer = setInterval(nextSlide, slideInterval);

            // Click dots để chuyển slide
            dots.forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    clearInterval(slideTimer); // Dừng tự động khi click
                    showSlide(index);
                    // Khởi động lại timer
                    slideTimer = setInterval(nextSlide, slideInterval);
                });
            });

            // Pause on hover
            const heroSection = document.querySelector('.hero-section');
            heroSection.addEventListener('mouseenter', () => {
                clearInterval(slideTimer);
            });

            heroSection.addEventListener('mouseleave', () => {
                slideTimer = setInterval(nextSlide, slideInterval);
            });
        });

              // Animation cho nội dung khi scroll
        document.addEventListener('DOMContentLoaded', function() {
            // Thêm class animation cho các phần tử
            const sections = document.querySelectorAll('main section');
            sections.forEach((section, index) => {
                section.classList.add('fade-in-element');
                section.style.animationDelay = `${index * 0.2}s`;
            });

            // Intersection Observer cho animation
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Quan sát tất cả phần tử trong main
            document.querySelectorAll('main h1, main h2, main section, main .col-md-6').forEach(el => {
                observer.observe(el);
            });
        });
            // Hiệu ứng ấn tượng cho phần body
        document.addEventListener('DOMContentLoaded', function() {
            // Tạo lá cây floating
            const leafIcons = ['🍃', '🌿', '🍂', '🍀', '🌱', '🌾'];
            const mainElement = document.querySelector('main');

            // Tạo 8 lá floating
            for (let i = 0; i < 8; i++) {
                const leaf = document.createElement('div');
                leaf.className = 'floating-leaf';
                leaf.innerHTML = leafIcons[Math.floor(Math.random() * leafIcons.length)];
                leaf.style.left = Math.random() * 100 + 'vw';
                leaf.style.top = Math.random() * 100 + 'vh';
                leaf.style.fontSize = (Math.random() * 2 + 1) + 'rem';
                leaf.style.opacity = Math.random() * 0.2 + 0.1;
                leaf.style.animationDuration = (Math.random() * 30 + 20) + 's';
                leaf.style.animationDelay = Math.random() * 5 + 's';
                mainElement.appendChild(leaf);
            }

            // Parallax effect
            window.addEventListener('scroll', function() {
                const scrolled = window.pageYOffset;
                const main = document.querySelector('main');
                const rate = scrolled * -0.5;
                // main.style.transform = `translate3d(0, ${rate}px, 0)`;

                // Animate elements on scroll
                animateOnScroll();
            });

            // Typing effect cho tiêu đề chính
            const mainTitle = document.querySelector('main h1');
            const originalText = mainTitle.textContent;
            mainTitle.textContent = '';

            let i = 0;
            function typeWriter() {
                if (i < originalText.length) {
                    mainTitle.textContent += originalText.charAt(i);
                    i++;
                    setTimeout(typeWriter, 50);
                }
            }

            // Bắt đầu typing effect sau 500ms
            setTimeout(typeWriter, 500);

            // Animate timeline cards với delay
            const timelineCards = document.querySelectorAll('main .col-md-6 .bg-white');
            timelineCards.forEach((card, index) => {
                card.style.animation = `fadeInUp 0.8s ease-out ${index * 0.2}s both`;
                card.style.opacity = '0';

                // Hiệu ứng hover riêng cho mỗi card
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-15px) scale(1.02)';
                    this.style.boxShadow = '0 25px 50px rgba(87, 154, 98, 0.3), 0 0 100px rgba(212, 175, 55, 0.15)';

                    // Hiệu ứng màu sắc
                    const yearElement = this.querySelector('.text-warning');
                    if (yearElement) {
                        yearElement.style.background = 'linear-gradient(45deg, #d4af37, #ffd700)';
                        yearElement.style.webkitBackgroundClip = 'text';
                        yearElement.style.webkitTextFillColor = 'transparent';
                    }
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                    this.style.boxShadow = '0 10px 30px rgba(87, 154, 98, 0.15), inset 0 1px 0 rgba(255,255,255,0.8)';
                });
            });

            // Hiệu ứng cho các đoạn văn
            const paragraphs = document.querySelectorAll('main p');
            paragraphs.forEach((p, index) => {
                p.style.animation = `fadeInUp 0.8s ease-out ${index * 0.1}s both`;
                p.style.opacity = '0';
            });

            // Intersection Observer cho hiệu ứng xuất hiện
            function animateOnScroll() {
                const elements = document.querySelectorAll('main > section, main .col-md-6, main h2, main ul');

                elements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 150;

                    if (elementTop < window.innerHeight - elementVisible) {
                        element.classList.add('animate');
                        element.style.animation = `fadeInUp 0.8s ease-out both`;
                    }
                });
            }

            // Initial animation trigger
            setTimeout(animateOnScroll, 1000);

            // Glow effect cho highlight text
            const highlightTexts = document.querySelectorAll('main strong');
            highlightTexts.forEach(text => {
                text.addEventListener('mouseover', function() {
                    this.style.textShadow = '0 0 10px rgba(87, 154, 98, 0.5)';
                });

                text.addEventListener('mouseout', function() {
                    this.style.textShadow = 'none';
                });
            });
        });
    </script>
