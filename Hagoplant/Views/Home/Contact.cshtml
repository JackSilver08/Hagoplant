            const toastContainer = document.createElement('div');
            toastContainer.id = 'hagoToastContainer';
            toastContainer.style.cssText = 'position:fixed;top:20px;right:20px;z-index:2000;';
            document.body.appendChild(toastContainer);
        }

        function showToast(isSuccess, message) {
            const container = document.getElementById('hagoToastContainer');

            const toast = document.createElement('div');
            toast.className = 'card shadow-sm border-0';
            toast.style.cssText = 'width:min(420px,92vw);margin-bottom:1rem;';

            toast.innerHTML = `
                <div class="card-body d-flex gap-3 align-items-start">
                    <div class="mt-1">
                        ${isSuccess
                            ? '<i class="fa-solid fa-circle-check text-success fs-4"></i>'
                            : '<i class="fa-solid fa-circle-xmark text-danger fs-4"></i>'
                        }
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-semibold mb-1">${isSuccess ? 'Thành công' : 'Không thành công'}</div>
                        <div class="small text-muted">${message}</div>
                    </div>
                    <button type="button" class="btn btn-sm btn-link text-muted" onclick="this.closest('.card').remove()">
                        Đóng
                    </button>
                </div>
                <div class="progress rounded-0" style="height:4px;">
                    <div class="progress-bar bg-${isSuccess ? 'success' : 'danger'}"
                         role="progressbar"
                         style="width:100%;transition:width 5s linear;">
                    </div>
                </div>
            `;

            container.appendChild(toast);

            // Tự động ẩn sau 5 giây
            const progressBar = toast.querySelector('.progress-bar');
            setTimeout(() => {
                progressBar.style.width = '0%';
            }, 100);

            setTimeout(() => {
                if (toast.isConnected) toast.remove();
            }, 5100);
        }

        form.addEventListener("submit", async function (e) {
            e.preventDefault();
            const data = new FormData(form);

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: data,
                    headers: { "Accept": "application/json" }
                });

                if (response.ok) {
                    // Đẩy event thành công vào GTM nếu cần
                    if (window.dataLayer) {
                        window.dataLayer.push({
                            event: "contactFormSubmit",
                            formStatus: "success",
                            formData: {
                                name: data.get("name"),
                                email: data.get("email")
                            }
                        });
                    }

                    showToast(true, "Đã gửi liên hệ thành công! Hago Tree sẽ phản hồi sớm nhất.");
                    form.reset(); // Xóa form sau khi gửi thành công

                    // Tùy chọn: chuyển về trang chủ sau 3 giây
                    setTimeout(() => {
                        window.location.href = "/";
                    }, 3000);

                } else {
                    if (window.dataLayer) {
                        window.dataLayer.push({
                            event: "contactFormSubmit",
                            formStatus: "error"
                        });
                    }
                    showToast(false, "Gửi liên hệ thất bại. Vui lòng thử lại sau.");
                }
            } catch (error) {
                if (window.dataLayer) {
                    window.dataLayer.push({
                        event: "contactFormSubmit",
                        formStatus: "exception",
                        errorMessage: error.message
                    });
                }
                showToast(false, "Không thể gửi liên hệ. Vui lòng kiểm tra kết nối mạng.");
            }
        });
