                    background-color: #3b5998;
                }

                footer .social-icon.zalo {
                    background-color: #0068ff;
                }

                footer .social-icon.shopee {
                    background-color: #ee4d2d;
                }

                footer .social-icon:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
                }

            footer a.text-light:hover {
                color: #579a62 !important;
                padding-left: 5px;
                transition: all 0.3s ease;
            }

        /* Responsive footer */
        @@media (max-width: 768px) {
            footer .d-flex.align-items-center {
                flex-direction: column;
                text-align: center;
            }

                footer .d-flex.align-items-center .me-3 {
                    margin-right: 0 !important;
                    margin-bottom: 1rem;
                }
        }

        .imglogo {
            width: 50px;
            height: 50px;
        }


        /* THÊM STYLE CHO PHẦN BODY NỘI DUNG (chỉ phần main) */

        /* Container chính */
        main.container, main .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Container trong main */
        main .container {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
            margin-bottom: 0 !important;
        }

        /* Giảm margin của các sections */
        main section.mb-5 {
            margin-bottom: 2rem !important;
        }

        /* Section cuối cùng không có margin dưới */
        main section:last-child {
            margin-bottom: 0 !important;
            padding-bottom: 1.5rem !important;
        }

        /* Tiêu đề chính */
        main h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            color: #2c3e50;
            text-align: center;
            position: relative;
            padding-bottom: 20px;
        }

            main h1::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, #579a62, #d4af37);
                border-radius: 2px;
            }

        main h2 {
            font-size: 2.2rem;
            margin: 2.5rem 0 1.5rem;
            color: #34495e;
            position: relative;
            padding-left: 20px;
        }

            main h2::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 6px;
                height: 70%;
                background-color: #579a62;
                border-radius: 3px;
            }

        main h3 {
            font-size: 1.8rem;
            color: #579a62;
            margin: 2rem 0 1rem;
            border-bottom: 2px solid #e8f5e9;
            padding-bottom: 8px;
        }

        main h4 {
            font-size: 1.4rem;
            color: #d4af37;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        /* Đoạn văn */
        main p {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 1.2rem;
            color: #4a5568;
            text-align: justify;
        }

        main .lead {
            font-size: 1.3rem;
            color: #555;
            font-weight: 300;
            line-height: 1.7;
            max-width: 800px;
            margin: 0 auto 2rem;
        }

        /* Danh sách */
        main ul {
            list-style-type: none;
            padding-left: 0;
            margin: 1.5rem 0;
        }

            main ul li {
                padding: 8px 0 8px 35px;
                position: relative;
                margin-bottom: 8px;
                color: #4a5568;
                font-size: 1.1rem;
            }

                main ul li::before {
                    content: '✓';
                    position: absolute;
                    left: 0;
                    top: 8px;
                    width: 25px;
                    height: 25px;
                    background-color: #579a62;
                    color: white;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 14px;
                    font-weight: bold;
                }

        /* Card boxes */
        main .bg-white {
            background-color: #ffffff !important;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(87, 154, 98, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e0e0e0;
            overflow: hidden;
        }

            main .bg-white:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(87, 154, 98, 0.15);
                border-color: #579a62;
            }

        /* Các section */
        main section {
            margin-bottom: 4rem;
            padding: 2rem;
            background: linear-gradient(to bottom, #ffffff, #f9f9f9);
            border-radius: 15px;
            border-left: 5px solid #579a62;
        }

        /* Timeline items */
        main .col-md-6 {
            margin-bottom: 1.5rem;
        }

        /* Quotes và text đặc biệt */
        main .fw-bold {
            font-size: 1.2rem;
            color: #579a62;
            background-color: rgba(87, 154, 98, 0.1);
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #d4af37;
            margin: 2rem 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            main h1 {
                font-size: 2.2rem;
            }

            main h2 {
                font-size: 1.8rem;
            }

            main h3 {
                font-size: 1.5rem;
            }

            main p {
                font-size: 1rem;
            }

            main section {
                padding: 1.5rem;
            }
        }

        /* Animation cho các phần tử */
        .fade-in-element {
            animation: fadeInUp 0.8s ease-out forwards;
            opacity: 0;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Styling cho ornament đã có */
        main .ornament::before,
        main .ornament::after {
            content: '❦';
            position: absolute;
            color: #d4af37;
            font-size: 28px;
            top: 50%;
            transform: translateY(-50%);
        }

        main .ornament::before {
            left: -50px;
        }

        main .ornament::after {
            right: -50px;
        }

        /* Custom cho nội dung giới thiệu */
        main .text-primary-custom {
            background: linear-gradient(90deg, #579a62, #2c5f2d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        /* Background nền tổng thể */
        main {
            flex: 1;
            background: linear-gradient(135deg, #f8f5f0 0%, #f0f7f0 100%);
            position: relative;
            overflow: hidden;
            padding: 0 !important;
            margin: 0 !important;
        }

            main::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(circle at 20% 80%, rgba(87, 154, 98, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(212, 175, 55, 0.06) 0%, transparent 50%);
                pointer-events: none;
            }

            /* Tiêu đề chính với hiệu ứng đặc biệt */
            main h1 {
                font-size: 3.5rem;
                font-weight: 800;
                margin-bottom: 2rem;
                text-align: center;
                position: relative;
                padding: 1.5rem 0;
                background: linear-gradient(45deg, #2c5f2d, #579a62, #d4af37);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
                letter-spacing: 1px;
            }

                main h1::before {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 200px;
                    height: 4px;
                    background: linear-gradient(90deg, transparent, #579a62, #d4af37, transparent);
                    border-radius: 2px;
                }

                main h1::after {
                    content: '✿';
                    position: absolute;
                    bottom: -15px;
                    left: 50%;
                    transform: translateX(-50%);
                    color: #d4af37;
                    font-size: 24px;
                    animation: float 3s ease-in-out infinite;
                }

            /* Tiêu đề phụ */
            main h2 {
                font-size: 2.5rem;
                margin: 3rem 0 2rem;
                text-align: center;
                position: relative;
                padding: 1rem 4rem;
                background: white;
                display: inline-block;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(87, 154, 98, 0.15);
                border: 2px solid #e8f5e9;
                transform-style: preserve-3d;
                perspective: 1000px;
            }

                main h2 .ornament {
                    position: relative;
                    padding: 0 4rem;
                }

                    main h2 .ornament::before,
                    main h2 .ornament::after {
                        content: '❧';
                        position: absolute;
                        color: #d4af37;
                        font-size: 32px;
                        top: 50%;
                        transform: translateY(-50%) rotate(-15deg);
                        animation: spin 10s linear infinite;
                    }

                    main h2 .ornament::before {
                        left: 0;
                        animation-delay: -5s;
                    }

                    main h2 .ornament::after {
                        right: 0;
                        transform: translateY(-50%) rotate(15deg);
                    }

            /* Timeline cards - Thiết kế giống như những lá cây */
            main .col-md-6 .bg-white {
                background: linear-gradient(145deg, #ffffff, #f5f5f5) !important;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(87, 154, 98, 0.15), inset 0 1px 0 rgba(255,255,255,0.8);
                border: none;
                padding: 2.5rem;
                position: relative;
                overflow: hidden;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                min-height: 280px;
                border-top: 5px solid #579a62;
            }

                main .col-md-6 .bg-white::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 5px;
                    background: linear-gradient(90deg, #579a62, #d4af37);
                }

                main .col-md-6 .bg-white::after {
                    content: '2025';
                    position: absolute;
                    top: 20px;
                    right: 20px;
                    font-size: 4rem;
                    font-weight: 900;
                    color: rgba(87, 154, 98, 0.05);
                    z-index: 0;
                }

            main .col-md-6:nth-child(2) .bg-white::after {
                content: '2026';
            }

            main .col-md-6:nth-child(3) .bg-white::after {
                content: '2027';
            }

            main .col-md-6:nth-child(4) .bg-white::after {
                content: '2028';
            }

            main .col-md-6 .bg-white:hover {
                transform: translateY(-15px) rotateX(5deg);
                box-shadow: 0 25px 50px rgba(87, 154, 98, 0.25), 0 0 100px rgba(212, 175, 55, 0.1);
            }

