            main .col-md-6 .text-warning {
                font-size: 1.8rem;
                font-weight: 700;
                color: #d4af37 !important;
                position: relative;
                display: inline-block;
                padding-bottom: 10px;
                margin-bottom: 1.5rem;
            }

                main .col-md-6 .text-warning::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 60px;
                    height: 3px;
                    background: linear-gradient(90deg, #d4af37, #ffd700);
                    border-radius: 2px;
                }

            /* Paragraph styling với hiệu ứng */
            main p {
                font-size: 1.15rem;
                line-height: 1.9;
                color: #4a5568;
                position: relative;
                padding-left: 1.5rem;
                margin-bottom: 1.5rem;
                text-align: justify;
            }

                main p::before {
                    content: '❖';
                    position: absolute;
                    left: 0;
                    top: 0;
                    color: #579a62;
                    font-size: 1rem;
                }

